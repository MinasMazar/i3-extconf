set $mod Mod4
set $bcolor #044440
set $fcolor #DD6633

set $term_exec exec i3-sensible-terminal -e
set $i3api exec ~/.i3/i3api

set $ws_1     1: main
set $ws_2    20: www
set $ws_3    30: media
set $ws_4    40
set $ws_5    50
set $ws_6    60
set $ws_7    70
set $ws_8    80
set $ws_9    90: i3/system
set $ws_10  100: file
set $outpad 1001

set $ws_main  $ws_1
set $ws_www   $ws_2
set $ws_media $ws_3
set $ws_fm    $ws_10
# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
                     
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
#font pango:DejaVu Sans Mono 8
font pango:FontAwesome 8, Terminus 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
workspace_auto_back_and_forth yes
focus_follows_mouse yes

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Shift+Return exec i3-sensible-terminal --title=float-terminal 

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
# bindsym $mod+d exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop --dmenu='dmenu -b'

# Bind Multimedia keys
bindsym XF86AudioPlay               exec xmms2 toggle
bindsym XF86AudioStop               exec xmms2 stop
bindsym XF86AudioPrev               exec xmms2 prev
bindsym XF86AudioNext               exec xmms2 next
bindsym XF86AudioLowerVolume        exec amixer -q set Master 2%- unmute
bindsym XF86AudioRaiseVolume        exec amixer -q set Master 2%+ unmute
bindsym Shift+XF86AudioLowerVolume  exec amixer -q set Master mute
bindsym Shift+XF86AudioRaiseVolume  exec amixer -q set Master toggle

# Bind lockers & shooters
exec xscreensaver -no-splash

bindsym $mod+ugrave          workspace trans, workspace number $outpad
bindsym $mod+Shift+ugrave    workspace trans, workspace $outpad, exec xscreensaver-command --activate
bindsym Print                exec xfce4-screenshooter

# Bind util X11 bins
bindsym Shift+Pause          $term_exec xev

bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+ograve focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+ograve move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
#bindsym $mod+f fullscreen
bindsym $mod+Tab fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+q focus child

# Scratchpadding
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

bindsym $mod+period workspace next
bindsym $mod+comma  workspace prev
bindsym $mod+Shift+period move container to workspace next
bindsym $mod+Shift+comma  move container to workspace prev

# switch to workspace
bindsym $mod+1 workspace number $ws_1
bindsym $mod+2 workspace number $ws_2
bindsym $mod+3 workspace number $ws_3
bindsym $mod+4 workspace number $ws_4
bindsym $mod+5 workspace number $ws_5
bindsym $mod+6 workspace number $ws_6
bindsym $mod+7 workspace number $ws_7
bindsym $mod+8 workspace number $ws_8
bindsym $mod+9 workspace number $ws_9
bindsym $mod+0 workspace number $ws_10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws_1
bindsym $mod+Shift+2 move container to workspace number $ws_2
bindsym $mod+Shift+3 move container to workspace number $ws_3
bindsym $mod+Shift+4 move container to workspace number $ws_4
bindsym $mod+Shift+5 move container to workspace number $ws_5
bindsym $mod+Shift+6 move container to workspace number $ws_6
bindsym $mod+Shift+7 move container to workspace number $ws_7
bindsym $mod+Shift+8 move container to workspace number $ws_8
bindsym $mod+Shift+9 move container to workspace number $ws_9
bindsym $mod+Shift+0 move container to workspace number $ws_10


# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Escape exec killall i3-nagbar

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym ograve resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

mode "LAUNCH" {
  bindsym f exec thunar, mode "default"
  bindsym Shift+f workspace number "100:FILE", exec thunar, mode "default"
  bindsym o exec opera, mode "default"
  bindsym c exec chromium-browser, mode "default"
  bindsym k exec gkrellm, mode "default"
  bindsym j exec jedit, mode "default"
  bindsym v exec gvim, mode "default"

  bindsym F7  $term_exec rvm default exec cappuccino, $term_exec rvm default exec cappuccino, mode "default"
  bindsym F6  exec i3-sensible-terminal, split v, exec i3-sensible-terminal, split h, exec i3-sensible-terminal, mode "default"

  bindsym F2  workspace $ws_www, layout tabbed, exec opera, exec chromium-browser, mode "default"
  bindsym F3  workspace $ws_media, layout stacking, $term_exec alsamixer, exec rhythmbox, mode "default"
  bindsym F4  workspace $ws_fm, $term_exec mc, exec i3-sensible-terminal, $term_exec mc, mode "default"
  bindsym Escape mode "default"
  bindsym $mod+m mode "default"
}

bindsym $mod+r    mode "resize"
bindsym $mod+m    mode "LAUNCH"

bindsym $mod+apostrophe workspace back_and_forth
bindsym $mod+Shift+apostrophe move container to workspace back_and_forth
bindsym $mod+igrave           $i3api get_workspaces | dmenu -b | $i3api goto_workspace _stdin_
bindsym $mod+Shift+igrave     $i3api get_workspaces | dmenu -b | $i3api move_to_workspace _stdin_
bindsym $mod+Shift+m exec xfce4-appfinder

# Appplication assignments
for_window [title=".*float-terminal.*"] floating enable
for_window [class="Audacious"] floating enable
for_window [class="Xfce4-notifyd"] floating enable

# Defining borders
new_window pixel 2

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        position top
        output LVDS1
        output VGA1

        workspace_buttons yes
        status_command i3status

        font pango:FontAwesome 8, Terminus 8
        colors {
          background $bcolor
          statusline #ffffff
          separator #F6336F
  
          focused_workspace  #4c7899 #285577 $fcolor
          active_workspace   #333333 #5f676a #FFFF00
          inactive_workspace #333333 #222222 #FFFF00
          urgent_workspace   #2f343a #900000 #ffffff
        }

        # Syntax
        # mode <dock|hide|invisible>
        # hidden_state <hide|show>
        # modifier <Modifier>
        mode dock
        hidden_state hide
        modifier Mod4
}


